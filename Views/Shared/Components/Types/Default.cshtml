@{
}

@model IEnumerable<string>

@*Displaying the different categories on the left*@
<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum="1" class="btn btn-outline-secondary btn-dark text-white">Home</a>

    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@c" asp-route-pageNum="1"
           class="btn btn-dark text-white @(ViewBag.SelectedType == c ? "btn-primary" : "btn-outline-secondary")">@c</a>
    }
</div>