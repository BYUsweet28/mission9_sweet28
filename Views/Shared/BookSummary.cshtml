@{
}

@model Books

@*DIsplaying all of the books with their info. One of the extra bootsrap things that I did was add the "list-group-item-primary" to author name to make it stand out a little more*@
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Title
        </h4>
        <span class="badge bg-info" style="float:right">
            Price: $@Model.Price
        </span>
        <span class="list-group-item-primary" style="">
            Author: @Model.Author
        </span>
        <br />
        <span class="" style="">
            Publisher: @Model.Publisher
        </span>
        <br />
        <span class="" style="">
            ISBN: @Model.Isbn
        </span>
        <br />
        <span class="" style="">
            Classification: @Model.Classification
        </span>
        <br />
        <span class="" style="">
            Category: @Model.Category
        </span>
        <br />
        <span class="" style="">
            Page Count: @Model.PageCount
        </span>
        <br />
    </div>

    @*Form to add a book to cart and redirect to the correct url*@
    <form method="POST" asp-page="/Buy">

        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

        <span class="card-text">
            <button type="submit" class="btn btn-success btn-sm float-end">Add to Cart</button>
        </span>
    </form>
</div>